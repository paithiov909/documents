{
    "name": "${localWorkspaceFolderBasename}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": { "VARIANT": "4" }
    },
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
            "version": "none",
            "installRadian": true,
            "installVscDebugger": true
        },
        "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
            "packages": "tidymodels,vetiver,plumber,microbenchmark,reprex,targets,gibasa",
            "installSystemRequirements": true,
            "additionalRepositories": "paithiov909 = 'https://paithiov909.r-universe.dev'"
        },
        "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {}
    },
    "remoteEnv": {
        "MECAB_DEFAULT_RC": "/usr/local/etc/mecabrc"
    },
    "forwardPorts": [8000],
    "portsAttributes": {
        "8000": {
            "label": "PlumberAPI",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "curl https://get.volta.sh | bash"
}
