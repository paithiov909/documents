{
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".md"]
    }
  },
  "rules": {
    "preset-smarthr": {
      "@textlint-rule/no-unmatched-pair": true,
      "prh-rules": false,
      "sentence-length": false,
      "no-hankaku-kana": true,
      "no-mixed-zenkaku-and-hankaku-alphabet": false,
      "no-doubled-conjunctive-particle-ga": false,
      "no-double-negative-ja": false,
      "ja-no-mixed-period": false,
      "ja-no-abusage": true,
      "ja-no-redundant-expression": false,
      "ja-hiragana-keishikimeishi": true,
      "ja-hiragana-fukushi": true,
      "ja-hiragana-hojodoushi": true,
      "ja-hiragana-daimeishi": true,
      "ja-no-space-around-parentheses": false,
      "ja-no-space-between-full-width": true,
      "ja-space-between-half-and-full-width": false,
      "ja-space-after-exclamation": false,
      "ja-space-after-question": false,
      "ja-space-around-code": false
    }
  }
}
